<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/bgcirculo"
    tools:context=".Recomendaciones_act">

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="559dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="PUEDES PROBAR TAMBIÃ‰N"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="162dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textViewhg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amazon Prime" />

                <ImageView
                    android:id="@+id/AIDIhg"
                    android:layout_width="294dp"
                    android:layout_height="59dp"
                    app:srcCompat="@drawable/amazon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewgh"
                        android:layout_width="111dp"
                        android:layout_height="18dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="$ 4.99 USD" />

                    <Button
                        android:id="@+id/btnDosj"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_on_background_disabled"
                        android:text="Ir al sitio"
                        android:textSize="12sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="165dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="323dp"
                android:layout_height="168dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textViewhgh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disney Plus" />

                <ImageView
                    android:id="@+id/AIDIhj"
                    android:layout_width="289dp"
                    android:layout_height="62dp"
                    app:srcCompat="@drawable/disney" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7g"
                        android:layout_width="111dp"
                        android:layout_height="18dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="$ 6.99 USD" />

                    <Button
                        android:id="@+id/btnDos5"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/material_on_background_disabled"
                        android:text="Ir al sitio"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ANUNCIO PATROCINADO" />

        <androidx.cardview.widget.CardView
            android:layout_width="327dp"
            android:layout_height="157dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <VideoView
                android:id="@+id/vw"
                android:layout_width="305dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="center" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="51dp"
        android:background="@color/teal_200"
        android:backgroundTint="@color/teal_200"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:text="MANTENEDOR" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:text="HOME" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:text="Explora" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>